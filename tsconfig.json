{
    "compilerOptions": {
        "target": "ES2017",
        "module": "CommonJS",
        "lib": [
            "es6",
            "es2017"
        ],
        "moduleResolution": "node",
        "outDir": "dist",
        "sourceMap": true,
        "rootDir": ".",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
    },
    "exclude": [
        "dist",
        "node_modules",
    ]
}